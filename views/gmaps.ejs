  </head>
  <body style="text-align: center;">
    <h3 style="text-align: center;">User's Location</h3>

    <div id="map"></div>
    <a href="/govpage"><button class="btn btn-lg btn-primary">Back</button></a>
    <script>
function initMap() {
  var baridih = {lat: <%=loc[0].lat%>, lng: <%=loc[0].lon%>};

  var map = new google.maps.Map(
      document.getElementById('map'), {zoom: 10, center: baridih});
  var marker = new google.maps.Marker({position: baridih, map: map});
}
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtWP1zWrDXNsuUztQ8c4Kvqb2_AlET248&callback=initMap">
    </script>
  </body>
